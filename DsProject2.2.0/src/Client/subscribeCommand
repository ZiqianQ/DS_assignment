package Client;

import java.io.DataInputStream;
import java.io.DataOutputStream;
import java.io.File;
import java.io.IOException;
import java.io.RandomAccessFile;
import java.net.Socket;
import java.net.UnknownHostException;
import java.util.Arrays;

import org.json.simple.JSONArray;
import org.json.simple.JSONObject;
import org.json.simple.parser.JSONParser;
import org.json.simple.parser.ParseException;

public class subscribeCommand {

public static boolean subscribing = false;

	public static void subscibeCmd(String ip, int port, Resource aResource, String getid, boolean debugMode,
			boolean relay) throws ParseException {
		
		JSONObject newCommand = new JSONObject();
		JSONObject resource = aResource.render();

		newCommand.put("command", "QUERY");
		newCommand.put("relay", relay);
		newCommand.put("id", getid);
		newCommand.put("resourceTemplate", resource);

		// print JSONObject
		if (debugMode) {
			Client.logger.info("subscribing to " + ip + ":" + port + "using id" + getid +"\n");
			Client.logger.info("SENT:");
			System.out.println(newCommand.toJSONString());
		}

		
		sendMessage.sender(ip, port, newCommand, debugMode);
	}

}
